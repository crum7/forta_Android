<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firsttime"
    android:background="#f7f7ff">



    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="fortaへようこそ"
                android:gravity="center"
                android:textSize="45sp"/>


            <TextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:text="2. 自分の時間割を設定しましょう。"
                android:textSize="@dimen/browser_actions_context_menu_min_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcome" />

            <TextView
                android:id="@+id/second_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="友達はあなたが登録した時間割を見ることが出来ます。"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/second"
                android:paddingTop="10sp"
                app:layout_constraintStart_toStartOf="parent"/>




            <ImageView
                android:id="@+id/gifView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_add"
                android:contentDescription="時間割の設定の説明" />


            <Button
                android:id="@+id/button_first_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="24dp"
                android:background="@drawable/kadomaru"
                android:text="@string/次へ"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifView1" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>