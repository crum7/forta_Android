<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zyugyouzikann"
    android:background="#f7f7ff">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id = "@+id/zyugyouzikann"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/授業時間"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="1限　　9:20-10:15"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zyugyouzikann"/>

    <TextView
        android:id="@+id/time2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="2限　　10:15-11:00"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time1"/>

        <TextView
            android:id="@+id/time3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="3限　　11:10-11:55"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time2"/>

        <TextView
            android:id="@+id/time4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="4限　　12:05-12:50"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time3"/>

        <TextView
            android:id="@+id/time5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="5限　　13:30-15:00"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time4"/>

        <TextView
            android:id="@+id/time6"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="6限　　15:10-16:40"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>