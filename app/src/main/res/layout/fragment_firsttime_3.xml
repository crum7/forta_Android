<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firsttime"
    android:background="#f7f7ff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:text="fortaへようこそ"
                android:textSize="45sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:text="3. 友達の時間割を見てみましょう"
                android:textSize="@dimen/browser_actions_context_menu_min_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcome" />


            <TextView
                android:id="@+id/third_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:text="友達の検索、追加、時間割を見ることが出来ます。"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/third" />

            <ImageView
                android:id="@+id/gifView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="友達の時間割の見方"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/third_add" />


            <Button
                android:id="@+id/button_first_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kadomaru"
                android:text="@string/次へ"
                app:backgroundTint="@null"
                android:layout_marginTop="535dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gifView2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>