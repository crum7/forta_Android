<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings"
    android:background="#f7f7ff">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/usertext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ユーザー名変更"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nowname_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="現在の名前："
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/usertext"

                />

            <TextView
                android:id="@+id/nowname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/nowname_txt"
                app:layout_constraintTop_toBottomOf="@id/usertext" />




            <EditText
                android:id="@+id/changeName"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="新しいユーザー名"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nowname_txt" />


            <Button
                android:id="@+id/save_button_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/保存"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/changeName" />


            <TextView
                android:id="@+id/darenimirareteiruka"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="誰に見られてるか"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_button_name" />



            <ListView
                android:id="@+id/list_dare"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/darenimirareteiruka"/>


            <TextView
                android:id="@+id/blacklist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ブロックした人"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_dare" />


            <ListView
                android:id="@+id/list_block"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blacklist"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>

</FrameLayout>