<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="#f7f7ff"
    >

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <Button
        android:id="@+id/settings_move"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ユーザー名設定"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/kadomaru"
        app:backgroundTint="@null">
    </Button>




    <TextView
        android:id="@+id/時間割英語"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_move"
        android:text="友達に公開される名前を変更することができます。"
        android:gravity="center"
        />


        <TextView
            android:id="@+id/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/時間割英語"

            android:gravity="center"
            />

    <Button
        android:id="@+id/touroku_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="友達確認"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/white"
        android:background="@drawable/kadomaru"
        app:backgroundTint="@null"
        />

        <TextView
        android:id="@+id/時間割登録英語"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/touroku_button"
        android:text="自分が友達登録した人を見ることができます。"
        android:gravity="center"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>